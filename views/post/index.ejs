<%- include('../includes/header'); %>

  <div class="container">
    <h2>
      All Post
    </h2>
    <a href="/posts/create">
      <button class="btn btn-primary">
        Create Post
      </button>
    </a>

    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Content</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% posts.forEach(post=> { %>
          <tr>
            <td>
              <%= post.id %>
            </td>
            <td>
              <%= post.title %>
            </td>
            <td>
              <%= post.content %>
            </td>
            <td>
              <a href="/posts/edit/<%= post.id %>">
                <button class="btn btn-primary">
                  Edit
                </button>
              </a>
              <a href="/posts/delete/<%= post.id %>/">
                <button class="btn btn-danger">
                  Delete
                </button>
              </a>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
  </div>

  <%- include('../includes/footer'); %>